<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WarshipsOnline.HowToPlay"
             Title="HowToPlay">
    
    <Grid x:Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.ColumnSpan="5" Grid.RowSpan="2" Source="battleship.png" Aspect="AspectFill"/>
        <ScrollView Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" BackgroundColor="#80000000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>

                <Label
                    Grid.ColumnSpan="5"
                    x:Name="Header"
                    FontSize="22"
                    Style="{StaticResource Headline}"/>

                <Button
                    Grid.Row="1"
                    Style="{StaticResource MenuButton}" Margin="0" VerticalOptions="Fill"/>
                <Label
                    x:Name="GrayField"
                    Grid.Column="1"
                    Grid.Row="1"
                    Padding="10"
                    Opacity="0.8"/>

                <Button
                    Grid.Row="2"
                    Style="{StaticResource MenuButton}" Margin="0" VerticalOptions="Fill"
                    BackgroundColor="Yellow"
                    />
                <Label
                    x:Name="YellowField"
                    Grid.Column="1"
                    Grid.Row="2"
                    Padding="10"
                    Opacity="0.8"/>

                <Button
                    Grid.Row="3"
                    Style="{StaticResource MenuButton}" Margin="0" VerticalOptions="Fill"
                    BackgroundColor="Red"/>
                <Label
                    x:Name="RedField"
                    Grid.Column="1"
                    Grid.Row="3"
                    Padding="10"
                    Opacity="0.8"/>

                <Button
                    Grid.Row="4"
                    Style="{StaticResource MenuButton}" Margin="0" VerticalOptions="Fill"
                    BackgroundColor="DarkRed"/>
                <Label
                    x:Name="DarkRedField"
                    Grid.Column="1"
                    Grid.Row="4"
                    Padding="10"
                    Opacity="0.8"/>

                <Button
                    Grid.Row="5"
                    Style="{StaticResource MenuButton}" Margin="0" VerticalOptions="Fill"
                    BackgroundColor="Orange"/>
                <Label
                    x:Name="OrangeField"
                    Grid.Column="1"
                    Grid.Row="5"
                    Padding="10"
                    Opacity="0.8"/>
                <Button
                    Grid.Row="6"
                    Text="2*xx"
                    x:Name="TransparentButton"
                    TextColor="White"
                    Style="{StaticResource MenuButton}" Margin="0" VerticalOptions="Fill"
                    BackgroundColor="Transparent"/>
                <Label
                    x:Name="TransparentField"
                    Grid.Column="1"
                    Grid.Row="6"
                    Padding="10"/>
            </Grid>
        </ScrollView>

        <Grid x:Name="LoadingOverlay" BackgroundColor="Black" Opacity="0.5" IsVisible="False" Grid.ColumnSpan="6    " Grid.RowSpan="2">
            <ActivityIndicator IsRunning="True" VerticalOptions="Center" HorizontalOptions="Center" Color="White"/>
        </Grid>
    </Grid>
</ContentPage>
